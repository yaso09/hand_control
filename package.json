{
  "name": "hand-control",
  "version": "1.1.1",
  "description": "Hand gesture mouse control",
  "main": "main.js",
  "author": "Yasir",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.yasir.handcontrol",
    "productName": "Hand Control",
    "publish": [
      {
        "provider": "github",
        "owner": "yaso09",
        "repo": "hand_control"
      }
    ],
    "files": [
      "**/*",
      "!node_modules/.cache/**"
    ],
    "extraFiles": [
      {
        "from": "mouse.ps1",
        "to": "mouse.ps1"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/hands": "^0.4.1675469240",
    "electron-updater": "^6.7.3",
    "face-api.js": "^0.22.2"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  }
}